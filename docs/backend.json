{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "List": {
      "title": "List",
      "description": "Represents a user's email list for validation.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the list file."
        },
        "createdAt": {
          "type": "number",
          "description": "Timestamp of when the list was created."
        },
        "progress": {
          "type": "number",
          "description": "Validation progress percentage."
        },
        "emailCount": {
          "type": "number",
          "description": "Total number of emails in the list."
        },
        "good": {
          "type": "number",
          "description": "Number of valid emails."
        },
        "risky": {
          "type": "number",
          "description": "Number of risky emails."
        },
        "bad": {
          "type": "number",
          "description": "Number of invalid emails."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns the list."
        },
        "data": {
          "type": "array",
          "description": "The full dataset of the list, with each object being a row."
        }
      },
      "required": ["name", "createdAt", "emailCount", "userId"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}/lists/{listId}": {
      "schema": {
        "$ref": "#/entities/List"
      },
      "description": "Stores the email lists for each user, including the full data."
    }
  }
}
